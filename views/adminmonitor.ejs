        }
        #myInput, #ended{
            border-radius: 5px;
            border-color: transparent;
            padding-left: 10px;
        }
        #footer{
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color:#343a40;
            color: white;
            float:left;
            text-align: left;
            font-size: 12px;
