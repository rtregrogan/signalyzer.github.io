            } else {
            panel.style.display = "block";
            }
        });
        }

        let leaveHistoryTD = document.querySelectorAll('.leaveHistoryTD')
        // console.log(leaveHistoryTD)
        for(i=0; i<leaveHistoryTD.length; i++){
            if(leaveHistoryTD[i].innerHTML == "Credit"){
                leaveHistoryTD[i].classList.add('leaveCreditPlus')
            }
            if(leaveHistoryTD[i].innerHTML == "Approved"){
                leaveHistoryTD[i].classList.add('leaveCreditPlus')
            }
            if(leaveHistoryTD[i].innerHTML == "Debit"){
                leaveHistoryTD[i].classList.add('leaveCreditMinus')
            }
            if(leaveHistoryTD[i].innerHTML == "Declined"){
                leaveHistoryTD[i].classList.add('leaveCreditMinus')
            }
        }

        let dayBodyh6 = document.querySelectorAll('.dayBodyh6')
        let SelectMonth = document.getElementById('SelectMonth')
        let weekdaysched = document.querySelectorAll('.weekdaysched')
        let dayContent = document.querySelectorAll('.dayContent')
        function getMonth(){
            let daysofMonthToView = []
            for(i=0; i<dayBodyh6.length; i++){
                dayBodyh6[i].innerHTML = ""
            }
            for (i=0; i<weekdaysched.length; i++){
                weekdaysched[i].innerHTML = ""
                weekdaysched[i].removeAttribute("id")
            }
            for (i=0; i<dayContent.length; i++){
                dayContent[i].classList.remove("offDate")
                dayContent[i].classList.remove("leaveDay")
            }
            // console.log(SelectMonth.value)
            fetch('/calendar')
            .then((res) => {
                return res.json()
            })
            .then((data) => {
                // console.log(data)
                for(i=0; i<data.length; i++){
                    if(data[i].MonthFilter == SelectMonth.value){
                        daysofMonthToView.push(data[i])
                    }
                }
                // console.log(daysofMonthToView)
                for(i=0; i<dayBodyh6.length; i++){
                    // console.log(dayBodyh6[i].id)
                    let parentdiv = dayBodyh6[i].parentNode
                    let nextdiv = parentdiv.nextElementSibling
                    let nextdivchild = nextdiv.children
                    // console.log(nextdivchild[0])
                    for(o=0; o<daysofMonthToView.length; o++){
                        if(daysofMonthToView[o].WeekDayNumber == dayBodyh6[i].id){
                            dayBodyh6[i].innerHTML = daysofMonthToView[o].Day
                            nextdivchild[0].id = `${daysofMonthToView[o].Month}${daysofMonthToView[o].Day}${daysofMonthToView[o].Year}`
                        }
                    }
                }

                fetch('/schedule/agentschedule')
                .then((res) => {
                    return res.json()
                })
                .then((sched) => {
                    // console.log(sched)
                    // let weekdaysched = document.querySelectorAll('.weekdaysched')
                    for(i=0; i<sched.length; i++){
                        
                        for(o=0; o<weekdaysched.length; o++){
                            if(weekdaysched[o].id == sched[i].agentDateID){
                                weekdaysched[o].innerHTML = sched[i].schedule
                            }
                        }
                    }
                    for (i=0; i<weekdaysched.length; i++){
                        let parentdiv = weekdaysched[i].parentElement
                        if(weekdaysched[i].innerHTML == "OFF"){
                            parentdiv.classList.add("offDate")
                        }
                        if(weekdaysched[i].innerHTML == "LEAVE"){
                            parentdiv.classList.add("leaveDay")
                        }
                    }
                })

            })
        }

        getMonth()

